#!/usr/bin/env ys-0

defn main(slug):
  data =:
    json/load:
      slurp: ".problem/exercises/$slug/canonical-data.json"

  say: "!yamlscript/v0\n"

  say:
    join "\n\n": gen-funcs(data.cases)

defn gen-funcs(cases):
  loop [[case & cases] cases, funcs []]:
    cases =:
      if case.cases: cases []
    genned-funcs =:
      if case.cases:
        gen-funcs(case.cases)
        gen-func(case).vector()
    funcs =: concat(funcs genned-funcs)
    if cases.seq():
      recur cases: funcs
      =>: funcs

defn gen-func(case):
  func =: case.property.kebab-symbol()
  args =:
    join ' ': case.input.keys().mapv(kebab-symbol)
  func =: |-
    defn ${func}($args):
      # Implement the '$func' function.
  =>: func

defn kebab-symbol(v):
  replace v /[A-Z]/:
    fn [c]: +"-" + c.lower-case()
