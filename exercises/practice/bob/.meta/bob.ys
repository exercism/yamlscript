!yamlscript/v0

defn response(hey-bob):
  condp re-matches hey-bob:trim:
    /\s*/          : 'Fine. Be that way!'
    /[^a-zA-Z]+\?/ : 'Sure.'
    /[^a-z]+\?/    : "Calm down, I know what I'm doing!"
    /.*\?/         : 'Sure.'
    /[^a-zA-Z]*/   : 'Whatever.'
    /[^a-z]*/      : 'Whoa, chill out!'
    else           : 'Whatever.'
