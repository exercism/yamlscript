!yamlscript/v0

numeral-mapping =::
  1000: M
  900:  CM
  500:  D
  400:  CD
  100:  C
  90:   XC
  50:   L
  40:   XL
  10:   X
  9:    IX
  5:    V
  4:    IV
  1:    I

defn roman(number):
  when pos?(number):
    -[part letter] =: numeral-mapping
      .filter(\(first(_) <= number)).0
    str letter: roman(number - part)
